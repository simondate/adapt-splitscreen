{
  "type": "object",
  "$schema": "http://json-schema.org/draft-03/schema",
  "id": "http://jsonschema.net",
  "required": false,
  "properties":{
    "pluginLocations": {
      "type":"object",
      "properties":{
        "contentobject": {
          "type":"object",
          "properties": {
            "_splitscreen": {
              "type": "object",
              "legend": "Split Screen",
              "properties": {
                "_isEnabled": {
                  "type": "boolean",
                  "required":true,
                  "default": true,
                  "title": "Enabled?",
                  "inputType": "Checkbox",
                  "validators": []
                },
                "_screenWidth": {
                  "type": "number",
                  "required": false,
                  "title": "Screen width",
                  "inputType": "Number",
                  "default": 900,
                  "help": "Sets the minimum screenwidth fot two column layout (px)",
                  "validators": ["number"]
                }
              }
            }
          }
        }
      }
    }
  }
}
